<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000B35">

    <ImageView
        android:id="@+id/splash_image_small_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/ic_ru_store" />

    <ImageView
        android:id="@+id/splash_image_big_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="156dp"
        android:src="@drawable/ic_ru_store_big"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="RuStore"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000B35"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="165dp"/>
</RelativeLayout>
